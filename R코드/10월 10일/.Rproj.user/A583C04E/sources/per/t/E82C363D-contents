sample(1:365, 5, replace=T)
2 %in% table(sample(1:365, 23, replace = T))

#Exercise A-1. Simulate (1000 times) the probability that two people have 
#the same birthday in a room of 23 people
count=0
for (i in 1:1000) {
  A=sample(1:365, 23, replace=T)
  if(length(which(table(A)==2))>0){
    count=count+1
  }  
} 
count

#Exercise A-2. Estimate the smallest number of people (= ğ‘›) needed so that the probability of a match is 95%. To
#estimate ğ‘›, use 1000 simulations for each ğ‘›.
n=47
iter=0
p=1
for (k in (365):(366-n)){
  p=p*k/365
  iter=iter+1
}
1-p 
iter
#ndl 47ì´ìƒì˜ ê²½ìš° 95% ì´ìƒì˜ í™•ë¥ ì´ ë‚˜ì˜¨ë‹¤ë‹¤
         
count=0
for (i in 1:1000) {
  A=sample(1:365, n, replace=T)
  if(length(which(table(A)==2))>0){
    count=count+1
  }  
} 
count

# Exersice A-3
count=0
n=50
for (i in 1:1000) {
  A=sample(1:365, 50, replace=T)
  if(length(which(table(A)==3))>0)  count=count+1

} 
count/1000

# Exersice A-4
n=80
p=0
while (p <0.5){
  count=0
  n=n+1
  for (i in 1:1000) {
    A=sample(1:365, n, replace=T)
    if(length(which(table(A)==3))>0)  count=count+1
  } 
  p=count/1000
  cat(n ,p,'\n')
}
