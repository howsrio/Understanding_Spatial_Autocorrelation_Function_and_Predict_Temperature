#Exercise B-3
Z <- (sum(sample(1:6, 6, rep = T))-21)/4.1833

for (i in 1:3){
  count=0
  for (m in 1:10000) {
    Z <- (sum(sample(1:6, 6, rep = T))-21)/4.1833
    if(Z>-i & Z<i){
      count=count+1
    }
  }
  cat('Probablity of simulate:',count/10000,'\n')
  cat('P(',-i,'< Z <',i,') =',pnorm(i)-pnorm(-i),'\n')
  
}

#Exersice C-1
rpareto <- function(n, m, a) {
  list=runif(n, 0, 1)
  list=m/((1-list)**(1/a))
  return(list)
}
set.seed(1)
rpareto(5,1,2)
